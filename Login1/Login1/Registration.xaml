<Window x:Class="Login1.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login1"
        mc:Ignorable="d"
        Title="Registration" Height="300" Width="400">
    <Grid>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Label Content="Email"></Label>
            <TextBox Name="Email"  HorizontalAlignment="Center" Height="30" Width="120"></TextBox>
            <Label Content="Логин"></Label>
            <TextBox Name="Login" HorizontalAlignment="Center" Height="30" Width="120" ></TextBox>
            <Label Content="Пароль"></Label>
            <PasswordBox Name="Pass" HorizontalAlignment="Center" Height="30" Width="120"  />
            <ComboBox Name="Role" Height="30" Width="120" Margin="0, 15, 0, 0"></ComboBox>
            <Button Content="Зарегистрироваться" Width="120" Height="30" Margin="0, 15, 0, 0" Background="#FFCDE2C9" Click="Button_Click"/>
        </StackPanel>
    </Grid>

</Window>
